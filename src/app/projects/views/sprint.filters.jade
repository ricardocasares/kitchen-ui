.row
    .col-lg-3.col-lg-push-9
        h5 Filter by sprint
        ul.nav.nav-pills.nav-stacked
            li(
                ui-sref-active="active",
                dnd-list="vm.backlog",
                dnd-drop="vm.onDrop(event, item, vm.sprints.backlog)"
            )
                a(ui-sref="app.project.agile.backlog") Backlog
                    span.pull-right.badge {{vm.sprints.backlog.stories.length}}
            li(
                ui-sref-active="active",
                ng-repeat="sprint in vm.sprints",
                dnd-list="sprint.stories",
                dnd-drop="vm.onDrop(event, item, sprint)"
             )
                a(ui-sref="app.project.agile.sprint({sprint: sprint.id})") Sprint {{sprint.id}}
                    span.badge.pull-right {{sprint.stories.length}}
        hr
        button.btn.btn-block.btn-default Add sprint
        hr
        h5 Filter stories by status
        ul.nav.nav-pills.nav-stacked
            li
                a(ng-click="vm.filter = 'all'")
                    | All  
                    span.badge.pull-right 10
            li.active
                a(ng-click="vm.filter = 'open'")
                    | Open  
                    span.badge.pull-right 5
            li
                a(ng-click="vm.filter = 'in-progress'")
                    | In progress  
                    span.badge.pull-right 0
            li
                a(ng-click="vm.filter = 'closed'")
                    | Closed  
                    span.badge.pull-right 5
        hr
    ui-view
