.row
	.col-lg-3.col-lg-push-9
		h5 Filter discussions
		ul.nav.nav-pills.nav-stacked
			li.active
				a(href="#") Recent
			li
				a(href="#") Open
			li
				a(href="#") Closed
		hr
	.col-lg-9.col-lg-pull-3
		.row
			.col-xs-12(ng-repeat="discussion in vm.discussions")
				.panel.panel-default
					.panel-body
						.row
							.col-xs-7.col-lg-9
								a(href="#") {{::discussion.name}}
							.col-xs-5.col-lg-3
								.discussion-meta.text-right
									span.label.label-success {{::discussion.status}}
									span.label.label-default {{::discussion.comments}}
			.col-xs-12.text-center
				button.btn.btn-default Load more
